{
  "name": "crossplane-explorer",
  "publisher": "vinishsoman",
  "displayName": "Crossplane Explorer",
  "icon": "resources/icon/icon.png",
  "description": "A Visual Studio Code extension for browsing, editing, and managing Crossplane resources in your Kubernetes cluster. Features a modern tree view, direct YAML editing, and seamless integration with kubectl.",
  "version": "0.0.9",
  "author": "Vinish Soman",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:crossplaneExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "crossplane-explorer.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "crossplane-explorer.refresh",
        "title": "Refresh",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "crossplane-explorer.viewResource",
        "title": "View Resource YAML"
      },
      {
        "command": "crossplane-explorer.editResource",
        "title": "Edit Resource YAML"
      },
      {
        "command": "crossplane-explorer.tailPodLogs",
        "title": "Watch Log"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "crossplane-explorer",
          "title": "Crossplane Explorer",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "crossplane-explorer": [
        {
          "id": "crossplaneExplorer",
          "name": ""
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "crossplane-explorer.refresh",
          "when": "view == crossplaneExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "crossplane-explorer.editResource",
          "when": "view == crossplaneExplorer && viewItem != logs-provider-pod",
          "group": "navigation"
        },
        {
          "command": "crossplane-explorer.tailPodLogs",
          "when": "view == crossplaneExplorer && viewItem == logs-provider-pod",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Crossplane Explorer",
      "properties": {
        "crossplaneExplorer.excludeCrdSuffixes": {
          "type": "array",
          "default": ["crossplane.io", "upbound.io", "cattle.io"],
          "description": "CRD suffixes to exclude from the CRD list."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vinish86/crossplane-explorer"
  }
}
